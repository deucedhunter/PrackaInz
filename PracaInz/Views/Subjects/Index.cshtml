@model IEnumerable<PracaInz.Models.Subject>

@{
    ViewData["Title"] = "Lista Przedmiotów";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Utwórz nowy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsImportant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsImportant)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SubjectID">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.SubjectID">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubjectID">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

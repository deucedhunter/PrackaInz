@model IEnumerable<PracaInz.Models.Enrollment>

@{
    ViewData["Title"] = "Lista";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Utwórz nowy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongDescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EnrollmentID">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.EnrollmentID">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentID">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

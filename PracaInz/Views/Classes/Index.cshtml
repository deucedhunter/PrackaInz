@model IEnumerable<PracaInz.Models.Class>

@{
    ViewData["Title"] = "Lista";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Utwórz</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClassID">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.ClassID">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClassID">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
